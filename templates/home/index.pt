<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

        <div class="content">

            <div class="hero">
                <div class="hero-inner">
                    <h1>
                       Automatically Generate Posts Using AI Agents...
                    </h1>

                    <input type="text" class="form-control"
                           placeholder=" Search for Agents">

                    <br>
                    <br>
                    <br>
                    <a href="#">Get started now by choosing your plan and automating your posts!</a>
                </div>
            </div>

            <div class="pypi-stats">
                <div class="stat">${'{:,}'.format(agents)} Agents</div>
                <div class="stat">${'{:,}'.format(users)} User</div>
            </div>

            <div class="container project-list">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">

                        <h2>Agents</h2>
                        <span class="subtitle">"Latest Updates: Our greatest Agents</span>


                        <div class="project" tal:repeat="p agent_list">
                            <div class="title"><a href="/project/${p.id}">${p.id}</a></div>
                            <div class="desc">${p.summary}</div>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>


        </div>

    </div>

    <div metal:fill-slot="additional-css" tal:omit-tag="True">
        <!-- additional css from the page -->
    </div>
</div>
